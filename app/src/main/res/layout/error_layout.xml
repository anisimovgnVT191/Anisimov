<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/error_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        tools:src="@drawable/ic_baseline_cloud_off_24" />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/error_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/main_fragment_margin"
        android:layout_marginStart="@dimen/main_fragment_margin"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:gravity="center"
        tools:text="Something went wrong Try reloading the page"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/reload_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/main_fragment_margin"
        android:layout_marginStart="@dimen/main_fragment_margin"
        android:layout_marginTop="8dp"
        android:text="@string/reload"
        android:textColor="#287BD7"
        android:textSize="@dimen/text_description_size"
        android:textAllCaps="false"
        android:background="?android:selectableItemBackground" />


</androidx.appcompat.widget.LinearLayoutCompat>